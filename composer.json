{
    "name": "CRTX/Curl",
    "type": "library",
    "description": "Object Oriented Curl",
    "keywords": ["curl", "oop"],
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Ruiz",
            "email": "ruiz.d.christian@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CRTX\\Curl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CRTX\\Curl\\Test\\": "test/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/CRTX/AbstractFactory.git"
        }
    ],
    "require": {
        "CRTX/AbstractFactory": "dev-master",
        "symfony/dependency-injection": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "phpunit/php-code-coverage": "^4.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
